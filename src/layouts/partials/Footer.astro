          {
            footer.map((menu: any) => (
              <li class="inline-block text-sm pl-4">
                <a href={slugSelector(menu.url, lang)}>{menu.name}</a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>
</footer>
