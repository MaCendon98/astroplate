---
import { markdownify } from "@/lib/utils/textConverter";
import ImageMod from "@/components/ImageMod.astro";
const { testimonial } = Astro.props;
---

{
  testimonial.data.enable && (
    <section class="section" id="references">
      <div class="container">
        <div class="row">
          <div class="mb-12 xl:col-6">
            <h3 set:html={markdownify(testimonial.data.tagline)} class="mb-6 text-sm text-primary font-semibold uppercase" />
            <h2 set:html={markdownify(testimonial.data.title)} class="mb-4" />
          </div>
          <div class="col-12">
            <div class="swiper testimonial-slider">
              <div class="swiper-wrapper">
                {testimonial.data.testimonials.map(
                  (item: {
                    content: string;
                    name: string;
                    category: string;
                    image: string;
                  }) => (
                    <div class="swiper-slide">
                      <div class="border">
                        <ImageMod
                            src={item.image}
                            height={400}
                            width={400}
                            alt={item.name}
                            format="jpeg"
                            class="object-cover h-60"
                        />
                        <div class="p-6">
                          <p class="mt-0" set:html={markdownify(item.category)} />
                          <h3 set:text={item.name} class="h5 mb-2 font-primary font-semibold" />
                          <p class="mt-0" set:html={markdownify(item.content)} />
                        </div>
                      </div>
                    </div>
                  ),
                )}
              </div>
              <div class="testimonial-slider-pagination mt-9 flex items-center justify-center text-center" />
              <div class="flex gap-10 mt-2 justify-end">
                <div class="swiper-button-prev primary text-sm mt-4 !text-primary !bottom-0 after:!text-2xl !relative"></div>
                <div class="swiper-button-next primary text-sm mt-4 !text-primary !bottom-0 after:!text-2xl !relative"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  )
}

<script>
  import { Swiper } from "swiper";
  import "swiper/css";
  import "swiper/css/navigation";
  import { Navigation } from "swiper/modules";

  // astro:page-load event is fired when the page is loaded
  document.addEventListener("astro:page-load", () => {
    new Swiper(".testimonial-slider", {
      modules: [Navigation], 
      spaceBetween: 40,
      loop: true,
      centeredSlides: false,
      navigation: {
        nextEl: ".swiper-button-next",
        prevEl: ".swiper-button-prev",
      },
      breakpoints: {
        768: {
          slidesPerView: 2,
        },
        992: {
          slidesPerView: 3,
        },
      },
    });
  });
</script>
